{% extends 'base.html.twig' %}

{% block title %}Library{% endblock %}

{% block body %}
    <h1>Library</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ library.id }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ library.rating }}</td>
            </tr>
            <tr>
                <th>Reading_date</th>
                <td>{{ library.readingDate ? library.readingDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Opinion</th>
                <td>{{ library.opinion }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_library_index') }}">back to list</a>

    <a href="{{ path('app_library_edit', {'id': library.id}) }}">edit</a>

    {{ include('library/_delete_form.html.twig') }}
{% endblock %}
